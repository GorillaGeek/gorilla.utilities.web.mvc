@model Test.Models.TestViewModel
@{
    ViewBag.Title = "Home Page";
}



<div class="row" style="margin-top: 50px;">
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.EnumDropDownListTemplateFor(x => x.SelectType, null, null)
            </div>

            <div class="form-group">
                <pre>@Html.EnumDropDownListTemplateFor(x => x.SelectType, null, null).ToString()</pre>
            </div>

            <div class="form-group">
                @Html.EnumDropDownListTemplateFor(x => x.Sub[0].SelectType, null, null)
            </div>

            <div class="form-group">
                <pre>@Html.EnumDropDownListTemplateFor(x => x.Sub[0].SelectType, null, null).ToString()</pre>
            </div>

            <div class="form-group">
                @Html.EnumDropDownListTemplateFor(x => x.Sub[0].Sub[0].SelectType, null, null)
            </div>

            <div class="form-group">
                <pre>@Html.EnumDropDownListTemplateFor(x => x.Sub[0].Sub[0].SelectType).ToString()</pre>
            </div>

            <div class="form-group">
                <pre>@Html.ValidationMessageFor(x => x.Sub[0].Sub[0].SelectType).ToString()</pre>
            </div>
        }
    </div>
</div>